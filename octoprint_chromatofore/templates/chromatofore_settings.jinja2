<!-- octoprint_chromatofore/templates/chromatofore_settings.jinja2 -->

<div>
    <h4>Chromatofore Plugin Settings</h4>
    
    <h5>GPIO Board Addresses</h5>
    <div data-bind="foreach: settings.plugins.chromatofore.gpio_boards">
        <input type="text" class="input-block-level" data-bind="value: $data, event: {change: $root.updateGPIOBoard}">
        <button data-bind="click: $root.removeGPIOBoard">Remove</button>
    </div>
    <button data-bind="click: addGPIOBoard">Add GPIO Board</button>
</div>
